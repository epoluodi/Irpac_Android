<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tabbarlayout"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/tabbarlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@drawable/main_tabbar_backimg"
        android:clickable="true"
        android:focusable="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/menu1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/menu1_main_tabbar"
                android:layout_width="32dp"

                android:layout_height="40dp"
                android:layout_gravity="center"
                android:clickable="true" />
            <!--<ImageView-->
            <!--android:layout_width="13dp"-->
            <!--android:layout_height="13dp"-->
            <!--android:background="@drawable/main_tabbar_mark1"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginTop="3dp"-->
            <!--android:layout_marginRight="18dp"-->
            <!--android:id="@+id/mark1_main_image_tabbar"-->
            <!--/>-->
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu2"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/menu2_main_tabbar"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:clickable="true" />

            <TextView
                android:id="@+id/mark2_main_text_tabbar"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_gravity="right"
                android:layout_marginRight="35dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/main_tabbar_mark2"
                android:gravity="center_horizontal|center_vertical"
                android:minWidth="24dp"
                android:visibility="invisible"
                android:text="12"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/menu3"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/menu3_main_tabbar"
                android:layout_width="32dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:clickable="true" />
            <!--<TextView-->
            <!--android:layout_width="30dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:text="12"-->
            <!--android:textSize="12dp"-->
            <!--android:background="@drawable/main_tabbar_mark2"-->
            <!--android:textColor="@color/white"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginTop="2dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:id="@+id/mark4_main_text_tabbar"-->
